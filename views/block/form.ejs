<div class="col-md-6 px-2">
    <div class="shadow rounded p-5">

        <button class="btn btn-outline-secondary my-3 w-100" onclick="testtext()">Тестовое заполнение полей</button>

        <form id="thisform" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="titleBook" class="form-label">Название книги</label>
                <input type="text" name="title" class="form-control" id="titleBook" placeholder="Преступление н наказание" value="<%= catalog.title %>">
            </div>
            <div class="mb-3">
                <label for="authorsBook" class="form-label">Автор</label>
                <input type="text" name="authors" class="form-control" id="authorsBook" placeholder="Ф.М. Достоевский" value="<%= catalog.authors %>">
            </div>
            <div class="mb-3">
                <label for="favoriteBook" class="form-label">Избранное</label>
                <select name="favorite" class="form-select form-control" id="favoriteBook">
                    <option <% if (catalog.favorite == "false") { %> selected <% } %> value="false">Нет</option> 
                    <option <% if (catalog.favorite == "true") { %> selected <% } %> value="true">Да</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="fileCoverBook" class="form-label">Изображение обложки 600 x 300 px (ссылка)</label>
                <input type="url" name="fileCover" class="form-control" id="fileCoverBook" placeholder="https://dummyimage.com/600x300/555/fff" value="<%= catalog.fileCover %>">
            </div>
            <div class="mb-3">
                <label for="fileNameBook" class="form-label">Издатель</label>
                <input type="text" name="fileName" class="form-control" id="fileNameBook" placeholder="Печатный дом" value="<%= catalog.fileName %>">
            </div>
            <div class="mb-3">
                <label for="descriptionBook" class="form-label">Описание</label>
                <textarea name="description" class="form-control" id="descriptionBook" rows="3"
                    placeholder="Мрачная психологическая драма Ф.М. Достоевского."><%= catalog.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="fileBookBook" class="form-label">Файл электронной книги</label>
                <input type="file" name="fileBook" class="form-control" id="fileBookBook" placeholder="загрузить" value="catalog/<%= catalog.fileBook %>">
            </div>

            <P>fileBook IS:</P>
            <p><%= catalog.fileBook %></p>

            <button form="thisform" type="submit" class="btn btn-secondary w-50">Отправить</button> 
        </form>
    </div>
</div>